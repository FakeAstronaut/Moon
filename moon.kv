#:kivy 1.0.9

<MoonBall>:
	size: 65, 65 
	canvas:
		Ellipse:
			pos:  self.pos
			size: self.size   
			texture: self.moon_texture.texture

<MoonAct>:
	ball: moon_ball
	
	Label:
		font_size: 20 
		center_x: root.width / 4
		top: root.top - 50
		text: root.label1 
        
	Label:
		font_size: 20  
		center_x: root.width * 3 / 4
		top: root.top - 50
		text: root.label2
		
	Label:
		center_x: root.width * 3.25 / 4
		center_y: root.height * 2.35/10
		id: lbl0
		text: "Observer"  	
    
	MoonBall:
		id: moon_ball
		center: self.parent.center
	
	DatetimePicker:
		#density: '2pt'
		#top: root.top - 60
		size: 480, 120
		#font_size: 5  
		id: datepicker
		#self.font_size: 5
		
	GridLayout:
		cols: 1
		rows: 1
		center_x: root.width * 3 / 4
		center_y: root.height /10
		
		TextInput:
			initial_text: True
			text: "Enter here"
			on_text: 
				self.text = self.text[-1] if self.initial_text else self.text 
				self.initial_text = False
			multiline: False
			on_text_validate:
				print 'User pressed enter in %s and current value is %s ' % (self, self.text)
				lbl.text = self.text
		Label:
			center_x: root.width * 3 / 4
			center_y: root.height * 2/10
			id: lbl
			text: "Latitude"  	
			
	GridLayout:
		cols: 1
		rows: 1
		center_x: root.width * 3.5 / 4
		center_y: root.height /10
		
		TextInput:
			initial_text: True
			text: "Enter here"
			on_text: 
				self.text = self.text[-1] if self.initial_text else self.text 
				self.initial_text = False
			multiline: False
			on_text_validate:
				print 'User pressed enter in %s and current value is %s ' % (self, self.text)
				lbl2.text = self.text
		Label:
			center_x: root.width * 3.5 / 4
			center_y: root.height * 2/10
			id: lbl2
			text: "Longitude"  	
		
		
		
